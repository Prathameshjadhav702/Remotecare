<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                app:cardBackgroundColor="#C462D5"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                   android:src="@drawable/doctor"
                    android:text="Hello,"
                    android:layout_marginTop="40dp"/>
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/name"
                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="260dp"
                    android:src="@drawable/doctor"

                    android:layout_marginTop="80dp"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/p"
                    app:shapeAppearance="@style/imageViewRounded"
                    android:layout_marginTop="40dp"></com.google.android.material.imageview.ShapeableImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"

                    android:textColor="?attr/colorOnBackground"
                    android:fontFamily="@font/poppins_medium"
                    android:text=" How are you feeling? "/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <TextView
            android:layout_marginTop="30dp"
            android:text="Services"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                app:cardBackgroundColor="#C462D5"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/event_description"
                android:layout_marginTop="20sp"
                android:layout_marginStart="60dp"
                android:layout_marginRight="45dp"
                android:src="@drawable/l"
                />

            <ImageView
                android:layout_width="100dp"
                android:id="@+id/event_description1"
                android:layout_height="100dp"
                android:layout_marginTop="20sp"
                android:src="@drawable/h"
                android:layout_marginStart="250sp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#C462D5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Heart Deasis \n Prediction"
                android:textColor="?attr/colorOnBackground"
                android:textSize="10sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="Heart Deasis \n Prediction"
                android:textColor="?attr/colorOnBackground"
                android:textSize="10sp"

                android:layout_marginTop="10dp"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Near By Doctors"
            android:textSize="20sp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10sp"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/recycler_view1"
            tools:listitem="@layout/heart_doctor_list"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</ScrollView>